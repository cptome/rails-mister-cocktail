<h1>aqui es su coktail elegido</h1>
<h1> <%= @cocktail.name %> </h1>

<% @cocktail.photos.each do |photo| %>
  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %>
      <%= link_to "Delete", dose_path(dose), method: :delete  %>
    </li>
  <% end %>
</ul>

<%= link_to "New Dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Volver al Indice",  cocktails_path %>
