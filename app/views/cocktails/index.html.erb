<h1>Aca es la vista de index</h1>

<div class="container">
 <div class="cards">
  <% @cocktails.each do |c| %>
      <%= link_to cocktail_path(c) do  %>
        <% if c.photo.attached? %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path c.photo.key, height: 300, width: 400, crop: :fill %>)">
            <h2><%= c.name %> </h2>
          </div>
          <% else %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://www.publicdomainpictures.net/pictures/280000/velka/not-found-image-15383864787lu.jpg')">
            <h2><%= c.name %> </h2>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
<div class="row">
<%= link_to "Create new cocktail", new_cocktail_path  %>
</div>
